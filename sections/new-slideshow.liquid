    "label": "Button text",
    "default": "Click here"
  },
    {
    "id": "button_link",
    "type": "url",
    "label": "Button link"
  },
  {
    "id": "linktext_new",
    "type": "text",
    "label": "Button text",
    "default": "Click here"
  },
                  {
    "id": "link_new",
    "type": "url",
    "label": "Button link"
  },
        {
          "type": "select",
          "id": "position",
          "label": "Text alignment for large screens",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "centre",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "centre"
        },
        {
          "type": "color",
