 <div class="w-row-container vintage-collection">
   <div class= "vintage-wrapper">
 
          <div class="one-box">
            <div class="threecr-new img" style="background-image:url(https:{{ section.settings.image1 | img_url: 'large' }})">
               <a href="{{ section.settings.link1 }}" >
                  <h3>{{ section.settings.heading1 }}</h3>
              </a>
            </div> 
            <div class="threecr-new" style="background-image:url(https:{{ section.settings.image2 | img_url: 'large' }})">
              <a href="{{ section.settings.link2 }}" >
                  <h3>{{ section.settings.heading2 }}</h3>
              </a>
            </div>
          </div>
     <div class="vintage-inner">
        <div class="threecr-item-one" style="background-image:url(https:{{ section.settings.image3 | img_url: 'large' }})">
             <a href="{{ section.settings.link3 }}" >
                  <h3>{{ section.settings.heading3 }}</h3>
              </a>
            </div>
  </div>
   </div>
</div>

