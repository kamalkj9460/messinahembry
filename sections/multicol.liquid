<link rel="stylesheet" data-href="{{ 'multicol.css' | asset_url }}">
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="row">
  <div class="col-md-2">
    {% for block in section.blocks %}
      <div class="boxes">
        <div class="part-3">
          <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-class="LazyLoad" data-src="{{ block.settings.icon-image | img_url: '65x' }}">
        </div>
        <div class="part-1">
          <h2 class="service-title">{{ block.settings.title }}</h2>
          <p>{{ block.settings.subtext }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Multicols",
    "tag": "section",
    "class": "multicols",
    "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Multicols"
    }
  ],
    "blocks":[
    {
      "name": "Blocks",
      "type": "text",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
		{
          "id": "subtext",
          "type": "richtext",
          "label": "Subtext"
        },
        {
          "type": "image_picker",
          "id": "icon-image",
          "label": "Icon Image"
        }
      ]
    }
  ],
   "presets": [
    {
      "category": "image",
      "name": "Multicols"
    }
  ]
}
{% endschema %}


<style>
  #shopify-section-{{ section.id }} .col-md-2 {
      display: flex !important;
      align-items: flex-end;
  }
  #shopify-section-{{ section.id }} .boxes {
      width: 20%;
      margin: 0 auto;
      text-align: center;
  }
  section#shopify-section-multicol {
      padding: 44px 0 50px;
      margin: 20px auto;
      background-color: #edeaea;
  }
  #shopify-section-{{ section.id }} .row {
      display: block!important;
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
  }
   #shopify-section-{{ section.id }} h2.service-title {
    font-size: 15px;
}
    @media screen and (max-width:767px) {
  #shopify-section-{{ section.id }} .boxes {
      width:50% !important;
  }
  #shopify-section-{{ section.id }} h2.service-title {
      font-size: 9px;
      max-width: 100%;
      margin: 0 auto;
  }
  #shopify-section-{{ section.id }} .boxes img {
      width: 100%;
      height: auto;
      {% comment %} max-width: 100%; {% endcomment %}
  }
  #shopify-section-{{ section.id }} .col-md-2 {
      display: flex!important;
      flex-wrap: wrap;
  }
  #shopify-section-{{ section.id }} .col-md-2 {
      display: flex !important;
      align-items: center;
  }
    }
</style>
